global
	daemon
        maxconn 256

defaults

	frontend localhost
    		bind *:80
    		bind *:443 ssl crt ssltermination/xip.io.pem
    		redirect scheme https if !{ ssl_fc }
    		mode http
    		default_backend nodes

	backend nodes
    		mode http
    		balance roundrobin
    		server web01 web:8443 check
    		server web02 web2:8443 check